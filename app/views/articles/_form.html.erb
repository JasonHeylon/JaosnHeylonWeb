<% if flash[:error_messages] %>
	<div class="error-message-box">
		Create article failed because of <%= pluralize(flash[:error_messages].size, "error") %>
		<ul class="error-tree">
			<% flash[:error_messages].each do |e| %>
				<li><%= e %></li>
			<% end %>
		</ul>

	</div>

<% end %>

<%= form_for(@article) do |f| %>
	<p>
		<%= f.label :title %> <br />
		<%= f.text_field :title %> 
	</p>
	<p>
		<%= f.label :named_url, "Named Url" %><br />
		<%= f.text_field :named_url %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body, id: "txtArticle", rows: "6", cols: "60", oninput: "this.editor.update()" %>
	</p>

	<p>
		<%= f.label :tag_list, "Tags" %><br />
		<%= f.text_field :tag_list, "data-role" => "tagsinput" %>
	</p>	


   <div id="MarkdownPreview">

   </div>



	<%= f.submit class: "btn btn-primary" %>

<% end %>