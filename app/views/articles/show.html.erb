<%= provide(:nav_id, "blog") %>

<div class="row">
	<div class="span12">
		<h1><%= @article.title %></h1>
		<div class="control-bar">
			<%= link_to("Edit", edit_article_path , class: "btn btn-success") %>
		</div>
		<div class="article_body">
			<%= raw @article.body %>
		</div>
		
		<div class="article_status">
			<%= pluralize(@article.read_count, "time") %> read,  posted at @<%= @article.created_at %>
		</div>
		<p>
			<%= link_to("Back to Article List", blog_path) %>
		</p>

	</div>
</div>



