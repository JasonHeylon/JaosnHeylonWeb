<div class="row">
	<div class="span12">
		<h1><%= @article.title %></h1>
		<div class="control-bar">
			<% if (current_user && current_user.is_admin?) %>
				<%= link_to("Edit", edit_article_path , class: "btn btn-success") %>
			<% end %>
		</div>
		<div class="article_body">
			<%= raw @article.body %>
		</div>
		
		<div class="article_status">
			<%= pluralize(@article.read_count, "time") %> read,  posted at @<%= @article.created_at %>
		</div>
		<p>
			<%= link_to("Back to Article List", blog_path) %>
		</p>

		<div class="comments-box">


			<div class="comment-list">
				<% @article.comments.each do |c| %>
						<%= render @comments %>
				<% end %>
			</div>

			<div class="new-comment">
				<%= form_for([@article, @article.comments.build]) do |f| %>
					<%#= render :partial => "comments/new_comment", locals:{ f: f } %>
				<% end %>
			</div>


		</div>



	</div>
</div>



